<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="390dp"
        android:layout_height="130dp"
        android:background="#212121">

        <ImageView
            android:id="@+id/icono1"
            android:layout_width="82dp"
            android:layout_height="78dp"
            android:layout_marginTop="32dp"
            android:scaleType="centerCrop"
            android:src="@drawable/i2_rv1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.081"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_titulo1rv2"
            android:layout_width="251dp"
            android:layout_height="31dp"
            android:layout_marginTop="32dp"
            android:text="World of Water"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toEndOf="@+id/icono1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_descripcion1rv2"
            android:layout_width="251dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:text="Estrategia . Juegos de rol . Juegos ocasionales"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_titulo1rv2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_titulo1rv2"
            app:layout_constraintTop_toBottomOf="@+id/tv_titulo1rv2" />

        <TextView
            android:id="@+id/tv_valoracion1"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="8dp"
            android:text="5.0"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv_descripcion1rv2"
            app:layout_constraintTop_toBottomOf="@+id/tv_descripcion1rv2" />

        <TextView
            android:id="@+id/tv_tamanio1"
            android:layout_width="72dp"
            android:layout_height="29dp"
            android:layout_marginTop="8dp"
            android:text="151MB"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tv_descripcion1rv2"
            app:layout_constraintHorizontal_bias="0.267"
            app:layout_constraintStart_toEndOf="@+id/tv_valoracion1"
            app:layout_constraintTop_toBottomOf="@+id/tv_descripcion1rv2" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="21dp"
            android:layout_height="12dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/star"
            app:layout_constraintEnd_toStartOf="@+id/tv_tamanio1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tv_valoracion1"
            app:layout_constraintTop_toTopOf="@+id/tv_tamanio1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

